<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:skia="clr-namespace:SkiaSharp.Views.Maui.Controls;assembly=SkiaSharp.Views.Maui.Controls"
             x:Class="Poker1.MainPage">


    <StackLayout>
        <Button x:Name="DealButton" Text="Deal Cards" Clicked="OnDealButtonClicked" />
        <skia:SKCanvasView x:Name="CanvasView" PaintSurface="OnCanvasViewPaintSurface" HeightRequest="400" />
        <Label x:Name="WinnerLabel" Text="Winner will be shown here" HorizontalOptions="Center" VerticalOptions="Center" FontSize="20" />
        <Label x:Name="PlayerWinsLabel" Text="Player Wins: 0" HorizontalOptions="Center" VerticalOptions="Center" FontSize="20" />
        <Label x:Name="PcWinsLabel" Text="PC Wins: 0" HorizontalOptions="Center" VerticalOptions="Center" FontSize="20" />
        <Button Text="Show Poker Rules" Clicked="OnShowPokerRulesClicked" />
    </StackLayout>
          

        


</ContentPage>
